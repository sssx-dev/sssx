{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": [],
  "exclude": [],
  "ts-node": {
    "esm": true
  },
  "compilerOptions": {
    "composite": true,
    "target": "ES2020",
    "lib": ["ES2021"],
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "sssx": ["packages/sssx"],
      "@sssx/eslint-config-sssx": ["packages/eslint-config-sssx"],
      "@sssx/sitemap-plugin": ["packages/sitemap-plugin"]
    }
  }
}
