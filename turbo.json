{
    "$schema": "https://turborepo.org/schema.json",
    "pipeline": {
      "build": {
        "dependsOn": ["^build"],
        "outputs": [".next/**"]
      },
      "test": {
        "dependsOn": ["build"],
        "outputs": [],
        "inputs": ["src/**/*.svelte", "src/**/*.ts", "test/**/*.ts", "test/**/*.svelte"]
      },
      "lint": {
        "outputs": []
      },
      "dev": {
        "cache": false
      },
      "deploy": {
        "dependsOn": ["build", "test", "lint"],
        "outputs": []
      }
    }
  }